<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
	
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Student_Tool</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.pool_size">100</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>


		<mapping resource="hbm/Course.hbm.xml" />
		<mapping resource="hbm/FieldOfStudy.hbm.xml" />
		<mapping resource="hbm/Grade.hbm.xml" />
		<mapping resource="hbm/Teacher.hbm.xml" />
		<mapping resource="hbm/Department.hbm.xml" />
		<mapping resource="hbm/Group.hbm.xml" />
		<mapping resource="hbm/TeachersCourses.hbm.xml" />
		<mapping resource="hbm/Certificate.hbm.xml" />
		<mapping resource="hbm/Student.hbm.xml" />
		<mapping resource="hbm/Bank.hbm.xml" />
		<mapping resource="hbm/Address.hbm.xml" />
		<mapping resource="hbm/Institute.hbm.xml" />
		<mapping resource="hbm/Specialization.hbm.xml" />
		<mapping resource="hbm/Users.hbm.xml" />
		<mapping resource="hbm/UserDetails.hbm.xml" />
		
	</session-factory>
	
</hibernate-configuration>